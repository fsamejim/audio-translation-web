# ===================================
# Frontend React Environment Variables
# ===================================
# Copy this file to .env and customize for your environment
# cp .env.example .env
#
# NOTE: All React environment variables must start with REACT_APP_
# to be accessible in the browser

# ===================================
# API ENDPOINTS
# ===================================

# Backend API Base URL (Spring Boot backend)
# Local development: http://localhost:8080/api
# Docker environment: http://backend:8080/api (internal) or http://localhost:8080/api (external)
REACT_APP_API_BASE_URL=http://localhost:8080/api

# Translation Service URL (FastAPI service)
# Local development: http://localhost:8001
# Docker environment: http://translation-service:8000 (internal) or http://localhost:8001 (external)
REACT_APP_TRANSLATION_SERVICE_URL=http://localhost:8001

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Application Environment
REACT_APP_ENVIRONMENT=development

# Enable/disable features
REACT_APP_ENABLE_DEBUG_LOGS=true
REACT_APP_ENABLE_TRANSLATION_FEATURE=true

# ===================================
# AUTHENTICATION CONFIGURATION
# ===================================

# JWT Token storage key
REACT_APP_TOKEN_STORAGE_KEY=token

# Session timeout (milliseconds)
REACT_APP_SESSION_TIMEOUT=86400000

# ===================================
# UI CONFIGURATION
# ===================================

# Application title
REACT_APP_TITLE=Audio Translation Web

# Theme settings
REACT_APP_DEFAULT_THEME=light

# ===================================
# FUTURE INTEGRATIONS
# ===================================

# Analytics (when implemented)
# REACT_APP_ANALYTICS_KEY=
# REACT_APP_GA_TRACKING_ID=

# Feature flags service (when implemented)
# REACT_APP_FEATURE_FLAGS_URL=

# File upload limits
# REACT_APP_MAX_FILE_SIZE_MB=100
# REACT_APP_ALLOWED_FILE_TYPES=mp3,wav,m4a,flac

# ===================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# ===================================

# Development
# REACT_APP_API_BASE_URL=http://localhost:8080/api
# REACT_APP_TRANSLATION_SERVICE_URL=http://localhost:8001

# Docker (from host)
# REACT_APP_API_BASE_URL=http://localhost:8080/api
# REACT_APP_TRANSLATION_SERVICE_URL=http://localhost:8001

# Production
# REACT_APP_API_BASE_URL=https://api.yourdomain.com/api
# REACT_APP_TRANSLATION_SERVICE_URL=https://translation.yourdomain.com

# ===================================